# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /*path/                     controllers.ReactiveMongoController.untrail(path: String)
GET     /                           controllers.QueryController.Query
GET     /test                       controllers.QueryController.Test
GET     /javascriptRoutes           controllers.QueryController.javascriptRoutes
GET     /autocomplete               controllers.QueryController.fetch
POST    /                           controllers.QueryController.Update
GET     /mongo                      controllers.ReactiveMongoController.index
GET     /mongo/:id                  controllers.ReactiveMongoController.findByName(id: reactivemongo.bison.BSONObjectID)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
